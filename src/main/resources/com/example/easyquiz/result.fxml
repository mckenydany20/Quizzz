<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="486.0" prefWidth="684.0" style="-fx-background-color: white; -fx-background-radius: 22px; -fx-border-radius: 22px;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.easyquiz.ResultController">
   <children>
      <Label fx:id="result" layoutX="250.0" layoutY="44.0" prefHeight="39.0" prefWidth="285.0" text="Resultat">
         <font>
            <Font name="Open Sans Extrabold" size="27.0" />
         </font>
      </Label>
      <Label fx:id="remark" layoutX="32.0" layoutY="92.0" prefHeight="70.0" prefWidth="623.0" text="Bravo !! Vous avez terminé le Quizz, c’est votre travail acharné et votre dévouement qui vous ont aidé à atteindre l’apogée du succès." wrapText="true">
         <font>
            <Font name="Open Sans Semibold" size="15.0" />
         </font>
      </Label>
      <ProgressIndicator fx:id="correct_progress" layoutX="277.0" layoutY="172.0" minHeight="130.0" minWidth="130.0" prefHeight="130.0" prefWidth="320.0" progress="0.71" style="-fx-background-color: BA723F; -fx-progress-color: #843F0F; -fx-font-weight: 900; -fx-font-size: 18px; -fx-background-radius: 16px; -fx-border-radius: 16px; -fx-box-border: blue;">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </ProgressIndicator>
      <Label fx:id="correcttext" layoutX="283.0" layoutY="322.0" text="Votre Score : 9" textFill="#808080">
         <font>
            <Font name="System Bold" size="17.0" />
         </font>
      </Label>
      <Button fx:id="playquizbtn" graphicTextGap="6.0" layoutX="196.0" layoutY="379.0" mnemonicParsing="false" onAction="#btnClicked" prefHeight="58.0" prefWidth="304.0" style="-fx-background-color: #344839; -fx-background-radius: 32px; -fx-border-radius: 32px;" text="REJOUER" textFill="WHITE">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Button>
      <Button fx:id="backButton" onAction="#goToHome" style="-fx-background-color: black;" text="Retour à l'accueil" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
