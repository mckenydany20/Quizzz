<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f0f0f0;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.easyquiz.QuestionController">

    <!-- User Management Button -->
    <Button layoutX="461.0" layoutY="372.0" onAction="#navigateToUserManagement" prefHeight="27.0" prefWidth="139.0" style="-fx-background-color: #BA723F;" text="Gestion des utilisateurs" textFill="WHITE" />

    <!-- Difficulty ComboBox -->
    <ComboBox fx:id="difficultyComboBox" layoutX="215.0" layoutY="59.0" onAction="#loadQuestions" prefHeight="38.0" prefWidth="170.0" promptText="Sélectionner la difficulté" />

    <!-- Questions Table -->
    <TableView fx:id="questionsTable" layoutX="52.0" layoutY="227.0" prefHeight="131.0" prefWidth="498.0">
        <columns>
            <TableColumn fx:id="questionColumn" prefWidth="243.20001220703125" text="Question" />
            <TableColumn fx:id="difficultyColumn" minWidth="0.0" prefWidth="253.60001220703123" text="Difficulté" />
        </columns>
    </TableView>

    <!-- Question Field -->
    <TextArea fx:id="questionField" layoutX="102.0" layoutY="114.0" prefHeight="52.0" prefWidth="398.0" promptText="Question" />

    <!-- Action Buttons -->
    <HBox layoutX="202.0" layoutY="180.0" prefHeight="27.0" prefWidth="199.0" spacing="10.0">
        <Button onAction="#handleAdd" prefHeight="27.0" prefWidth="95.0" style="-fx-background-color: #344839;" text="Ajouter" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
        <Button depthTest="DISABLE" onAction="#handleDelete" prefHeight="26.0" prefWidth="93.0" style="-fx-background-color: #344839;" text="Supprimer" textFill="WHITE" />
    </HBox>
   <Label layoutX="123.0" layoutY="14.0" prefHeight="38.0" prefWidth="405.0" style="-fx-text-fill: #344839;" text="Bienvenue chers Administrateurs" textFill="#344739">
      <font>
         <Font name="System Bold" size="24.0" />
      </font>
   </Label>
</AnchorPane>
